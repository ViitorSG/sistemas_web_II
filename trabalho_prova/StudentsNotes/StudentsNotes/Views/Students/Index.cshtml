@model IEnumerable<StudentsNotes.Models.Student>

@{
    ViewData["Title"] = "Alunos";
}

<style>
    .card {
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f8f9fa;
    }

    .card-body {
        padding: 15px;
    }

    .actions {
        display: inline-block;
        text-decoration: none;
        margin-right: 10px;
        padding: 8px 16px;
        border-radius: 4px;
        transition: background-color 0.3s ease, color 0.3s ease;
        border: 1px solid #007bff;
        color: #007bff;
    }

        .actions:hover {
            background-color: #007bff;
            color: #fff;
        }

    .btn-primary {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 4px;
        background-color: #007bff;
        color: #fff;
        border: 1px solid #007bff;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

<h1 class="text-primary">Alunos</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.StudentName)</h5>
                    <p class="card-text">
                        <strong>Idade do aluno:</strong> @Html.DisplayFor(modelItem => item.StudentAge)<br />
                        <strong>Email:</strong> @Html.DisplayFor(modelItem => item.Email)<br />
                        <strong>Telefone:</strong> @Html.DisplayFor(modelItem => item.Telefone)<br />
                        <strong>Tem Notebook:</strong> @(item.HasNotebook ? "Sim" : "Não")<br />
                    </p>
                    <a asp-action="Edit" asp-route-id="@item.StudentID" class="actions">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.StudentID" class="actions">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.StudentID" class="actions">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus"></i> Create New
    </a>
</p>
