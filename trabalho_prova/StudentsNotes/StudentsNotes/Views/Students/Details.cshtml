@model StudentsNotes.Models.Student

@{
    ViewData["Title"] = "Details";
}

@section styles {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.6.2/css/bootstrap.min.css" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
}

<h1 class="text-primary">Details</h1>

<div class="card floating-card">
    <div class="card-body">
        <h4 class="card-title font-weight-bold">Student</h4>
        <hr />
        <dl>
            <dt>
                Nome do Aluno
            </dt>
            <dd>
                @Html.DisplayFor(model => model.StudentName)
            </dd>
            <dt>
                Idade do Aluno
            </dt>
            <dd>
                @Html.DisplayFor(model => model.StudentAge)
            </dd>
            <dt>
                Email do Aluno
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                Telefone de contato
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Telefone)
            </dd>
            <dt>
                Possui Notebook
            </dt>
            <dd>
                @Html.DisplayFor(model => model.HasNotebook)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.StudentID" class="btn btn-primary">
        <i class="fa fa-pencil"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa fa-arrow-left"></i> Voltar a lista
    </a>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.2/js/bootstrap.min.js"></script>
}
