@model StudentsNotes.Models.Grade

@{
    ViewData["Title"] = "Editar Grade";
}

@section styles {
    <style>
        .floating-card {
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #f8f9fa;
            max-width: 400px;
            padding: 15px;
        }

        .btn-primary {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 20px;
            border-radius: 4px;
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .btn-secondary {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 20px;
            border-radius: 4px;
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }
    </style>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.6.2/css/bootstrap.min.css" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
}

<h1 class="text-primary">Editar Grade</h1>

<div class="card floating-card">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GradeID" />
            <div class="form-group">
                <label class="control-label">Aluno</label>
                <select asp-for="StudentID" class="form-control" asp-items="ViewBag.Alunos"></select>
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Disciplina</label>
                <select asp-for="DisciplineID" class="form-control" asp-items="ViewBag.Disciplinas"></select>
                <span asp-validation-for="DisciplineID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nota</label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa fa-arrow-left"></i> Voltar para a lista
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
