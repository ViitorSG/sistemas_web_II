@model StudentsNotes.Models.Grade

@{
    ViewData["Title"] = "Details";
}

@section styles {
    <style>
        .floating-card {
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #f8f9fa;
            max-width: 800px;
            padding: 15px;
        }

        .btn-warning {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 20px;
            border-radius: 4px;
            background-color: #ffc107;
            border-color: #ffc107;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn-warning:hover {
                background-color: #d39e00;
                border-color: #d39e00;
            }
    </style>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.6.2/css/bootstrap.min.css" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
}

<h1 class="text-primary">Details</h1>

<div class="card floating-card">
    <dl class="row">
        <dt class="col-sm-2">
            Nota do aluno
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Score)
        </dd>
        <dt class="col-sm-2">
            Nome do aluno
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.StudentName)
        </dd>
        <dt class="col-sm-2">
            Disciplina
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discipline.DisciplineName)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.GradeID" class="btn btn-warning">
        Editar
    </a> |
    <a asp-action="Index" class="btn btn-secondary">
        Voltar para a lista
    </a>
</div>
