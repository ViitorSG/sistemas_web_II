@model StudentsNotes.Models.Enrollment

@{
    ViewData["Title"] = "Delete";
}

@section styles {
    <style>
        .floating-card {
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #f8f9fa;
            max-width: 400px;
            padding: 15px;
        }

        .btn-danger {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 20px;
            border-radius: 4px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #dc3545;
                border-color: #dc3545;
            }
    </style>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.6.2/css/bootstrap.min.css" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
}

<h1 class="text-danger">Deletar Matricula</h1>

<div class="card floating-card">
    <h3>Deseja deletar a matricula?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ano da Matricula
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnrollmentYear)
        </dd>
        <dt class="col-sm-2">
            Status do aluno
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Nome do aluno
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.StudentName)
        </dd>
    </dl>

    <!-- Modal -->
    <div class="modal fade" id="modalConfirmationDelete" tabindex="-1" role="dialog" aria-labelledby="modalConfirmationDeleteLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="modalConfirmationDeleteLabel">Delete Enrollment</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Tem certeza que deseja deletar o aluno?
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete" asp-route-id="@Model.EnrollmentID">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Remover
                        </button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                            <i class="fa fa-times"></i> Cancelar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalConfirmationDelete">
        <i class="fa fa-trash"></i> Remover
    </button>

    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa fa-times"></i> Cancelar
    </a>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />
    <script src="https://code.jquery.com/jquery-3.7.0.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.2/js/bootstrap.min.js"></script>
}
