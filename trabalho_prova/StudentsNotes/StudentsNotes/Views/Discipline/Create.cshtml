@model StudentsNotes.Models.Discipline

@{
    ViewData["Title"] = "Create";
}

<style>
    .card {
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f8f9fa;
    }

    .card-body {
        padding: 15px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .btn-primary {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 4px;
        background-color: #007bff;
        color: #fff;
        border: 1px solid #007bff;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

<h1 class="text-primary">Create</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Discipline</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="DisciplineName" class="control-label">Nome da disciplina</label>
                        <input asp-for="DisciplineName" class="form-control" />
                        <span asp-validation-for="DisciplineName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Workload" class="control-label">Carga horaria</label>
                        <input asp-for="Workload" class="form-control" />
                        <span asp-validation-for="Workload" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Professor" class="control-label">Professor</label>
                        <input asp-for="Professor" class="form-control" />
                        <span asp-validation-for="Professor" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa fa-arrow-left"></i> Voltar a lista
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
